@model ContrachequeOnline.Models.Funcionario

@using (Html.BeginForm())
{
    <div>
        @Html.LabelFor(m => m.Nome)
        @Html.TextBoxFor(m => m.Nome, new { required = "required" })
    </div>
    <div>
        @Html.LabelFor(m => m.CPF)
        @Html.TextBoxFor(m => m.CPF, new { required = "required" })
    </div>
    <div>
        @Html.LabelFor(m => m.Senha)
        @Html.PasswordFor(m => m.Senha, new { required = "required" })
    </div>
    <div>
        @Html.LabelFor(m => m.Cargo)
        @Html.TextBoxFor(m => m.Cargo, new { required = "required" })
    </div>
    <button type="submit">Cadastrar</button>
}
